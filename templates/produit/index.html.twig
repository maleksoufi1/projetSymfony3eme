{% extends 'base-front.html.twig' %}

{% block title %}A domifit | Produits{% endblock %}

{% block body %}
 <!-- Breadcrumb Section Begin -->
    <section class="breadcrumb-section set-bg" data-setbg="/front-office/img/breadcrumb-bg.jpg">
          <div class="container">
            <div class="row">
                <div class="col-lg-8 p-0 m-auto">
                    <div class="bh-text">
                        <h3>Liste des produits</h3>
                        <ul>
                            <li>by Admin</li>
                            <li>Jan,20, 2022</li>
                            <li>20 Comment</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Breadcrumb Section End -->

    <!-- Team Section Begin -->
    <section class="team-section team-page spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="team-title">
                        <div class="section-title">
                            <span>Our Team</span>
                            <h2>TRAIN WITH EXPERTS</h2>
                        </div>
                        <a href="#" class="primary-btn btn-normal appoinment-btn">appointment</a>
                    </div>
                </div>
            </div>
            <div class="row">

                {% for produit in produits %}
                <div class="col-lg-4 col-sm-6">
                    <div class="ts-item set-bg" data-setbg="{{ asset('picture/' ~ produit.image) }}">
                        <div class="ts_text">
                            <h4>{{ produit.nom }}</h4>
                            <span>{{ produit.prix }}</span>
                            <div >


                            </div>
                        </div>

                    </div>

                    <a  style="border-radius: 50% 20% / 10% 40%;background: #f36100;float: right;" class="p-1 mb-1  text-white "
                        href="{{ path('passer',{'id':produit.id}) }}"> Passer Commande </a>
                    <div class="like">

                        <a href="{{ path('likeeventProduit',{'id':produit.id}) }}" class="fa fa fa-thumbs-up">Like({{ produit.jaime }})</a>
                        <a href="{{ path('dislikeeventProduit',{'id':produit.id}) }}" class="fa fa fa-thumbs-down">Dislike({{ produit.jaimepas }})</a>
                    </div>
                </div>



                {% endfor %}

        </div>
    </section>
    <!-- Team Section End -->
{% endblock %}
