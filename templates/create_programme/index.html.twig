                <td>{{ create_programme.conseils }}</td>
                <td>
                   <a  style="border: 50% 20% / 10% 40%;background: #f75100;float: right;" class="p-1 mb-1  text-white " href="{{ path('create_programme_imprimer', {'id': create_programme.id}) }}">imprimer</a>

                    <a  style="border: 50% 20% / 10% 40%;background:#FF0000;float: right;" class="p-1 mb-1  text-white " href="{{ path('create_programme_edit', {'id': create_programme.id}) }}">edit</a>
                </td>
            </tr>
