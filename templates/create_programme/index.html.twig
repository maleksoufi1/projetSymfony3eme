{% extends 'base-back.html.twig' %}

{% block title %}CreateProgramme index{% endblock %}

{% block body %}
    <h1>Liste Des Programmes Cr√©es</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Lundi</th>
                <th>Mardi</th>
                <th>Mercredi</th>
                <th>Jeudi</th>
                <th>Vendredi</th>
                <th>Samedi</th>
                <th>Dimanche</th>
                <th>Conseils</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for create_programme in create_programmes %}
            <tr>
