{% extends 'base-back.html.twig' %}



{% block body %}
<head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        <!-- CSS only -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    </head>
    <div class="container">
            <div class="row">
    <h3 class="mt-5 mb-5">Ajouter programme</h3>
    {% for message in app.flashes('notice') %}
    <div class="alert alert-success">
    {{message}}
    </div>
    {% endfor %}
            <div class="col-md-6 offset-md-3">

    {{ form_start(formAddProgramme) }}
                

               
                <div class="form_group">
                    {{ form_label(formAddProgramme.titre) }}
                    {{ form_widget(formAddProgramme.titre,{'attr':{'class':'form_control' }})}}
                </div>

               
                <div class="form_group">
                    {{ form_label(formAddProgramme.description) }}
                    {{ form_widget(formAddProgramme.description,{'attr':{'class':'form_control' }})}}
                </div>

                <div class="form_group">
                    {{ form_label(formAddProgramme.type) }}
                    {{ form_widget(formAddProgramme.type,{'attr':{'class':'form_control' }})}}
                </div>

                <div class="form_group">
                    {{ form_label(formAddProgramme.affiche) }}
                    {{ form_widget(formAddProgramme.affiche,{'attr':{'class':'form_control' }})}}
                </div>

                
            

                <div class="form_group">
                    {{ form_label(formAddProgramme.difficulte) }}
                    {{ form_widget(formAddProgramme.difficulte,{'attr':{'class':'form_control' }})}}
                </div>

                <div class="form_group">
                    {{ form_label(formAddProgramme.duree) }}
                    {{ form_widget(formAddProgramme.duree,{'attr':{'class':'form_control' }})}}
                </div>


                 <div class="form_group">
                    {{ form_label(formAddProgramme.categorieProgramme) }}
                    {{ form_widget(formAddProgramme.categorieProgramme,{'attr':{'class':'form_control' }})}}
                </div>

                <div class="form_group">
                    {{ form_label(formAddProgramme.image) }}
                    {{ form_widget(formAddProgramme.image,{'attr':{'class':'form_control' }})}}
                </div>




                

                
                <div class="form_group">
                    <button class ="btn btn-info mt-2 text-white">Submit</button>
                </div>


                 
                
                
              
        

    {{ form_end(formAddProgramme) }}
            </div>
            </div>
    </div>

{% endblock %}