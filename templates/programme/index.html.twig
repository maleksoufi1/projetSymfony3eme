{% extends 'base-front.html.twig' %}

{% block title %}A domifit | Programme{% endblock %}

{% block body %}
    <!-- Breadcrumb Section Begin -->
    <section class="breadcrumb-section set-bg" data-setbg="/front-office/img/breadcrumb-bg.jpg">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 p-0 m-auto">
                    <div class="bh-text">
                        <h3>Qui que vous soyez,nous avons LE programme sportif qu'il vous faut !</h3>
                        <ul>
                            <li>by Admin</li>
                            <li>Aug,15, 2019</li>
                            <li>20 Comment</li>
                            
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Breadcrumb Section End -->
 
        
        
        


    <!-- Blog Section Begin -->
    {% for programme in programmes %}
    <section class="blog-section spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 p-8">
                
                
                    <div class="blog-item">
                        <div class="bi-pic">
                            <td><img src="{{ asset('picture/' ~ programme.image) }}" alt="" width="90" height="90"</td>
                        </div>
                        

                        








                        <div class="bi-text">
                        
                        
                            <h5><a> {{  programme.titre }} </a> </h5>
                            <ul>
                                <li>Vues :{{ programme.abn }}</li>
                                <li>Aug,15, 2019</li>
                                <li>20 Comment</li>
                                <div class="stars">
            <i class="lar la-star" data-value="1"></i><i class="lar la-star" data-value="2"></i><i class="lar la-star" data-value="3"></i><i class="lar la-star" data-value="4"></i><i class="lar la-star" data-value="5"></i>
        </div>
        <input type="hidden" name="note" id="note" value="0">
         <script src="js/scripts.js"></script>
    
                            
                            </ul>
                             
                              
                         <p>- {{ programme.type }}</p>
                         <p>- {{ programme.affiche }}</p>
                         <p>- {{ programme.description }}</p>
                          
                           
                            

 <div class="bs-text">
 
                  <a  style="border : 50% 20% / 10% 40%;background: #FF0000;float: right;" class="p-1 mb-1  text-white " href="{{ path('programme_show1',{'id':programme.id} )}}">Show</a>
                  <a  style="border-radius: 50% 20% / 10% 40%;background: #f45200;float: right;" class="p-1 mb-1  text-white "
                              href="{{ path('addSuiviProgramme' , {'id': programme.id}) }}">acheter <a/>
                              <div class="like">

                        <a href="{{ path('likeevent',{'id':programme.id}) }}" class="fa fa fa-thumbs-up">Like({{ programme.jaime }})</a>
                        <a href="{{ path('dislikeevent',{'id':programme.id}) }}" class="fa fa fa-thumbs-down">Dislike({{ programme.jaimepas }})</a>
                    </div>
                              
                   



                        </div>
                    </div>
                    
                    

                    {% endfor %}
                    
                    {{ knp_pagination_render(programmes) }}

                      
                           
    


    <!-- Get In Touch Section Begin -->
  
{% endblock %}
