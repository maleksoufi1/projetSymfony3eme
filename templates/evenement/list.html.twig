{% extends 'base-back.html.twig' %}

{% block title %}Hello AgentController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>


<table class="table">
<thead>
<tr>
<th> Id</th>
<th> Catégorie événement </th>
<th> Image </th>
<th> Titre</th>
<th> Description</th>
<th> Horraire</th>
<th> Longitude</th>
<th> Latitude</th>
</tr>
</thead>
<tr {% for e in evenements%}>
<td>{{e.id}}</td>
<td>{{e.categorieEvenement}}</td>
<td><img src="{{asset('uploads/images/' ~  e.image )}}" alt="" style="width:40px:height:40px"></td>
<td>{{e.titre}}</td>
<td>{{e.description}}</td>
<td>{{e.horraire| date("m/d/Y")}}</td>
<td>{{e.longitude}}</td>
<td>{{e.latitude}}</td>
<td><a href="{{ path( 'deleteEvenement' , {'id':e.id} )}}"> Delete </a> </td>
<td><a href="{{ path( 'updateEvenement' , {'id':e.id} )}}"> Update </a> </td>
</tr {% endfor %}>
<td><a href="{{ path( 'addEvenement'  )}}"> Create New </a> </td>
</table>

{% endblock %}
